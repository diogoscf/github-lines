{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["es2020"],
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
